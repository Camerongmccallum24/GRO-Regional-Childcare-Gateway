        // Gemini API Integration for Candidates: Visa Eligibility Insights
        const getEligibilityBtn = document.getElementById('getEligibilityBtn');
        const candidateQualificationsInput = document.getElementById('candidateQualifications');
        const candidateExperienceInput = document.getElementById('candidateExperience');
        const candidateEnglishInput = document.getElementById('candidateEnglish');
