        // Interactive App Matching Demo Logic
        const runMatchingDemoBtn = document.getElementById('runMatchingDemoBtn');
        const demoDesiredRoleInput = document.getElementById('demoDesiredRole');
        const demoYearsExperienceInput = document.getElementById('demoYearsExperience');
        const demoPreferredRegionInput = document.getElementById('demoPreferredRegion');
        const matchingLoading = document.getElementById('matchingLoading');
        const matchingOutput = document.getElementById('matchingOutput');

        runMatchingDemoBtn.addEventListener('click', () => {
            const desiredRole = demoDesiredRoleInput.value.trim();
            const yearsExperience = parseInt(demoYearsExperienceInput.value, 10);
            const preferredRegion = demoPreferredRegionInput.value.trim();

            if (!desiredRole || isNaN(yearsExperience) || yearsExperience < 0 || !preferredRegion) {
                matchingOutput.textContent = 'Please fill in all demo fields correctly.';
                matchingOutput.classList.remove('hidden');
                return;
            }

            matchingLoading.classList.remove('hidden');
            matchingOutput.classList.add('hidden');
            matchingOutput.textContent = '';

            // Simulate a delay for demonstration purposes
            setTimeout(() => {
                let matchResult = '';
                let matchFound = false;

                if (desiredRole === 'Early Childhood Teacher' && yearsExperience >= 2) {
                    matchResult = `Great news! Based on your ${yearsExperience} years of experience as an Early Childhood Teacher, we have several potential matches in regions like Townsville and Cairns. These roles often come with DAMA concessions and clear PR pathways.`;
                    matchFound = true;
                } else if (desiredRole === 'Childcare Worker' && yearsExperience >= 1 && preferredRegion.toLowerCase().includes('western downs')) {
                    matchResult = `Excellent! Your profile as a Childcare Worker with ${yearsExperience} year(s) of experience is highly sought after in Western Downs. We have immediate openings that qualify for SID visa sponsorship.`;
                    matchFound = true;
                } else if (desiredRole === 'Childcare Worker' && yearsExperience >= 1 && preferredRegion.toLowerCase().includes('any rural qld')) {
                    matchResult = `Good potential! As a Childcare Worker with ${yearsExperience} year(s) of experience, you have strong prospects across various rural Queensland locations. Many services are actively seeking sponsored candidates.`;
                    matchFound = true;
                } else if (desiredRole === 'Family Day Care Worker' && yearsExperience >= 1) {
                    matchResult = `Positive outlook! Your experience as a Family Day Care Worker with ${yearsExperience} year(s) is in demand. We can connect you with providers looking for flexible and community-focused individuals.`;
                    matchFound = true;
                } else {
                    matchResult = `Currently, based on your selections, direct matches are limited. Consider gaining more experience or exploring the Training Visa (Subclass 407) as a stepping stone. Our app can help you identify skill development opportunities.`;
                }

                matchingOutput.textContent = matchResult;
                matchingLoading.classList.add('hidden');
                matchingOutput.classList.remove('hidden');
            }, 1500); // Simulate 1.5 second loading time
        });
    </script>
</body>
</html>
