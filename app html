    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <script>
        document.getElementById('currentYear').textContent = new Date().getFullYear();

        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Close mobile menu when a link is clicked
        document.querySelectorAll('#mobile-menu a').forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.add('hidden');
            });
        });
        
        // Smooth scroll for nav links and active state
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Active link highlighting on scroll
        const sections = document.querySelectorAll('section');
        const navLinks = document.querySelectorAll('header nav a, #mobile-menu a');

        window.onscroll = () => {
            let current = '';
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                if (pageYOffset >= sectionTop - 70) { // 70 to offset sticky header height
                    current = section.getAttribute('id');
                }
            });

            navLinks.forEach(link => {
                link.classList.remove('active', 'text-sky-600', 'font-semibold');
                link.classList.add('text-neutral-700');
                if (link.getAttribute('href') === `#${current}`) {
                    link.classList.add('active', 'text-sky-600', 'font-semibold');
                    link.classList.remove('text-neutral-700');
                }
            });
        };


        // Chart.js: Crisis Statistics
        const crisisStatsCtx = document.getElementById('crisisStatsChart').getContext('2d');
        const crisisStatsChart = new Chart(crisisStatsCtx, {
            type: 'bar',
            data: {
                labels: ['Western Downs: % Children (0-4) Accommodated', 'Maranoa: % Children (0-4) Accommodated', 'QLD: % Services Needing Waivers'],
                datasets: [{
                    label: 'Key Childcare Statistics (%)',
                    data: [22, 39, 23.3],
                    backgroundColor: [
                        'rgba(56, 189, 248, 0.6)', 
                        'rgba(14, 165, 233, 0.6)', 
                        'rgba(2, 132, 199, 0.6)'   
                    ],
                    borderColor: [
                        'rgba(56, 189, 248, 1)',
                        'rgba(14, 165, 233, 1)',
                        'rgba(2, 132, 199, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        title: {
                            display: true,
                            text: 'Percentage (%)'
                        }
                    },
                    x: {
                        ticks: {
                            callback: function(value, index, values) {
                                const label = this.getLabelForValue(value);
                                if (label.length > 20) { 
                                    const words = label.split(' ');
                                    let lines = [''];
                                    let currentLine = 0;
                                    words.forEach(word => {
                                        if ((lines[currentLine] + word).length > 16) { 
                                            currentLine++;
                                            lines[currentLine] = '';
                                        }
                                        lines[currentLine] += word + ' ';
                                    });
                                    return lines.map(line => line.trim());
                                }
                                return label;
                            }
                        }
                    }
                },
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    label += context.parsed.y + '%';
                                }
                                return label;
                            }
                        }
                    }
                }
            }
        });

        // Gemini API Integration for Employers: Genuine Need Justification
        const generateJustificationBtn = document.getElementById('generateJustificationBtn');
        const localEffortsInput = document.getElementById('localEfforts');
        const localChallengesInput = document.getElementById('localChallenges');
        const justificationLoading = document.getElementById('justificationLoading');
        const justificationOutput = document.getElementById('justificationOutput');

        generateJustificationBtn.addEventListener('click', async () => {
            const localEfforts = localEffortsInput.value.trim();
            const localChallenges = localChallengesInput.value.trim();

            if (!localEfforts || !localChallenges) {
                justificationOutput.textContent = 'Please provide details for both local recruitment efforts and challenges.';
                justificationOutput.classList.remove('hidden');
                return;
            }

            justificationLoading.classList.remove('hidden');
            justificationOutput.classList.add('hidden');
            justificationOutput.textContent = '';

            const prompt = `As an Australian employer, I need to justify why I require an overseas childcare worker for a rural Queensland location. My recent local recruitment efforts included: "${localEfforts}". The specific challenges I face in finding local staff are: "${localChallenges}". Please draft a concise justification paragraph suitable for an immigration nomination application, emphasizing the genuine need for an overseas worker.`;

            let chatHistory = [];
            chatHistory.push({ role: "user", parts: [{ text: prompt }] });
            const payload = { contents: chatHistory };
            const apiKey = ""; 
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await response.json();

                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    const text = result.candidates[0].content.parts[0].text;
                    justificationOutput.textContent = text;
                } else {
                    justificationOutput.textContent = 'Failed to generate justification. Please try again.';
                }
            } catch (error) {
                console.error('Error generating justification:', error);
                justificationOutput.textContent = 'An error occurred while generating justification. Please try again later.';
            } finally {
                justificationLoading.classList.add('hidden');
                justificationOutput.classList.remove('hidden');
            }
        });

        // Gemini API Integration for Employers: Draft Sponsored Role Job Description
        const generateJobDescBtn = document.getElementById('generateJobDescBtn');
        const jobRoleTitleInput = document.getElementById('jobRoleTitle');
        const jobResponsibilitiesInput = document.getElementById('jobResponsibilities');
        const jobQualificationsInput = document.getElementById('jobQualifications');
        const jobExperienceInput = document.getElementById('jobExperience');
        const jobLocationInput = document.getElementById('jobLocation');
        const jobDescLoading = document.getElementById('jobDescLoading');
        const jobDescOutput = document.getElementById('jobDescOutput');

        generateJobDescBtn.addEventListener('click', async () => {
            const roleTitle = jobRoleTitleInput.value.trim();
            const responsibilities = jobResponsibilitiesInput.value.trim();
            const qualifications = jobQualificationsInput.value.trim();
            const experience = jobExperienceInput.value.trim();
            const location = jobLocationInput.value.trim();

            if (!roleTitle || !responsibilities || !qualifications || !experience) {
                jobDescOutput.textContent = 'Please fill in Role Title, Key Responsibilities, Required Qualifications, and Desired Experience.';
                jobDescOutput.classList.remove('hidden');
                return;
            }

            jobDescLoading.classList.remove('hidden');
            jobDescOutput.classList.add('hidden');
            jobDescOutput.textContent = '';

            const prompt = `Draft a job description for a sponsored childcare role in rural Queensland. The role title is "${roleTitle}". Key responsibilities include: "${responsibilities}". Required qualifications are: "${qualifications}". Desired experience is: "${experience}". ${location ? `The specific location is ${location}.` : ''} Emphasize aspects attractive to international candidates seeking sponsorship and mention the benefits of working in a rural setting. Structure it as a professional job advertisement.`;

            let chatHistory = [];
            chatHistory.push({ role: "user", parts: [{ text: prompt }] });
            const payload = { contents: chatHistory };
            const apiKey = ""; 
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await response.json();

                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    const text = result.candidates[0].content.parts[0].text;
                    jobDescOutput.textContent = text;
                } else {
                    jobDescOutput.textContent = 'Failed to draft job description. Please try again.';
                }
            } catch (error) {
                console.error('Error drafting job description:', error);
                jobDescOutput.textContent = 'An error occurred while drafting the job description. Please try again later.';
            } finally {
                jobDescLoading.classList.add('hidden');
                jobDescOutput.classList.remove('hidden');
            }
        });

        // Gemini API Feature: Relocation Support Checklist Generator
