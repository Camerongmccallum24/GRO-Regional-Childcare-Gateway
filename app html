            const english = candidateEnglishInput.value.trim();

            if (!qualifications || !experience || !english) {
                eligibilityOutput.textContent = 'Please fill in all fields (Qualifications, Work Experience, English Proficiency) to get insights.';
                eligibilityOutput.classList.remove('hidden');
                return;
            }

            eligibilityLoading.classList.remove('hidden');
            eligibilityOutput.classList.add('hidden');
            eligibilityOutput.textContent = '';

            const prompt = `I am an international childcare professional interested in working in rural Queensland, Australia. My qualifications are: "${qualifications}". I have: "${experience}" of work experience as a childcare worker. My English proficiency is: "${english}". Based on typical Australian skilled migration requirements for childcare workers (Skills in Demand 482 visa and Designated Area Migration Agreement (DAMA) concessions), please provide a general, non-binding assessment of my potential eligibility and highlight any areas I might need to improve. State clearly that this is not legal advice.`;

            let chatHistory = [];
            chatHistory.push({ role: "user", parts: [{ text: prompt }] });
            const payload = { contents: chatHistory };
